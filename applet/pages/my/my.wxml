<import src="/template/login/index.wxml" />
<import src="/template/footer/footer.wxml" />

<view class="container">
	<view wx:if="{{apiUserInfoMap}}" class="userinfo">
		<navigator url="/pages/userInfo/userInfo">
			<image wx:if="{{apiUserInfoMap.avatarUrl}}" class="userinfo-avatar" src="{{ apiUserInfoMap.avatarUrl }}"
				background-size="cover"></image>
			<image wx:else class="userinfo-avatar" src="/images/nologin.png" background-size="cover"></image>
		</navigator>
		<view class="userNames">
			<text wx:if="{{apiUserInfoMap.userName}}" class="userinfo-nickname">{{ apiUserInfoMap.userName }}</text>
			<text wx:else class="userinfo-nickname">{{ apiUserInfoMap.nickName }}</text>
			<text wx:if="{{apiUserInfoMap.phoneNumber}}" class="userinfo-phoneNumber">{{ apiUserInfoMap.phoneNumber }}</text>
			<text wx:else class="userinfo-phoneNumber">暂未完善手机号</text>
		</view>
	</view>
	<view wx:else class="userinfo" style="margin-bottom:40rpx;">
		<image class="userinfo-avatar" src="/images/nologin.png" background-size="cover"></image>
		<button class="weui-btn mini-btn" style="margin-left:30rpx;" plain="true" size="mini"
			bindtap="goLogin">立即登录</button>
	</view>
	<view class="asset">
		<view class='item' bindtap='goAsset'>
			<view>{{balance}}</view>
			<view>余额</view>
		</view>
		<view class='item right' bindtap='goAsset'>
			<view>{{freeze}}</view>
			<view>冻结</view>
		</view>
		<view class='item right' bindtap='goScore'>
			<view>{{score}}</view>
			<view>积分</view>
		</view>
		<view class='item right' bindtap="addMsgNum">
			<view>{{apiUserInfoMap.subMsgNum}}</view>
			<view>推送次数</view>
		</view>
	</view>
	<view class="space"></view>

	<navigator wx:if="{{needUpdateUserInfo}}" url="/pages/userInfo/userInfo">
		<view class="menu-item" style="background-color:red">
			<view class="l">完善信息</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view wx:if="{{needUpdateUserInfo}}" class="line"></view>
	<view bindtap="addMsgNum">
		<view class="menu-item">
			<view class="l">点击此处增加推送消息次数</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</view>
	<view class="line"></view>
	<navigator url="/pages/asset/index">
		<view class="menu-item">
			<view class="l">资金明细</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<!-- flex布局的新菜单 -->
	<!-- <view class="menu-item">
    <view class="l">我的订单</view>
    <image class="next" src="/images/icon/next.png"></image>
  </view>
  <view class="space"></view>
  <view class="line"></view>
  <view class="menu-item">
    <view class="l">我的订单</view>
    <view class="r">内容</view>
  </view>
  <view class="line"></view>
  <view class="menu-item">
    <view class="l">我的订单</view>
    <view class="r">内容</view>
  </view> -->

	<view class="space"></view>
	<navigator wx:if="{{!apiUserInfoMap.base.isSeller}}" url="/pages/fx/apply-status">
		<view class="menu-item">
			<view class="l">成为分销商</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<navigator wx:else url="/pages/fx/apply-status">
		<view class="menu-item">
			<view class="l">分销中心</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view wx:if="{{apiUserInfoMap.base.isSeller}}" class="line"></view>
	<navigator wx:if="{{apiUserInfoMap.base.isSeller}}" url="/pages/fx/members">
		<view class="menu-item">
			<view class="l">销售团队</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view wx:if="{{apiUserInfoMap.base.isSeller}}" class="line"></view>
	<navigator wx:if="{{apiUserInfoMap.base.isSeller}}" url="/pages/fx/commisionLog">
		<view class="menu-item">
			<view class="l">佣金明细</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>

	<view class="space"></view>
	<navigator url="/pages/invoice/apply">
		<view class="menu-item">
			<view class="l">申请发票</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<navigator url="/pages/invoice/list">
		<view class="menu-item">
			<view class="l">发票记录</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>

	<view class="space"></view>
	<navigator url="/pages/select-address/index">
		<view class="menu-item">
			<view class="l">收货地址</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<navigator url="/pages/coupons/index">
		<view class="menu-item">
			<view class="l">领券中心</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<navigator url="/pages/goods/fav">
		<view class="menu-item">
			<view class="l">我的收藏</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>

	<view class="space"></view>
	<navigator url="/pages/sign/index">
		<view class="menu-item">
			<view class="l">每日签到</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<navigator url="/pages/score-excharge/index">
		<view class="menu-item">
			<view class="l">积分券兑换积分</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<navigator url="/pages/score-excharge/growth">
		<view class="menu-item">
			<view class="l">积分兑换成长值</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>

	<view class="space"></view>
	<navigator url="/pages/userInfo/userInfo">
		<view class="menu-item">
			<view class="l">个人信息</view>
			<image class="next" src="/images/icon/next.png"></image>
		</view>
	</navigator>
	<view class="line"></view>
	<view class="menu-item" bindtap="aboutUs">
		<view class="l">关于我们</view>
		<image class="next" src="/images/icon/next.png"></image>
	</view>
	<view class="line"></view>
	<view wx:if="{{userMobile}}" class="menu-item">
		<view class="l">绑定手机</view>
		<view class="r">{{ userMobile }}</view>
	</view>
	<view wx:else class="menu-item">
		<view class="l">绑定手机</view>
		<button type="primary" size="mini" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">立即绑定</button>
	</view>
	<view class="line"></view>
	<view class="menu-item" bindtap="clearStorage">
		<view class="l">清除缓存</view>
		<image class="next" src="/images/icon/next.png"></image>
	</view>
	<view class="line"></view>
	<view wx:if="{{apiUserInfoMap}}" class="menu-item" bindtap="loginOut" style="margin-bottom:30px">
		<view class="l">退出登录</view>
		<image class="next" src="/images/icon/next.png"></image>
	</view>
	<view wx:else class="menu-item" bindtap="goLogin" style="margin-bottom:30px">
		<view class="l">授权登录</view>
		<image class="next" src="/images/icon/next.png"></image>
	</view>
	<!-- <view class="line"></view>
  <view class="menu-item">
    <view class="l">绑定官网账号</view>
    <image class="next" src="/images/icon/next.png"></image>
  </view> -->
	<template is="footer" />
</view>

<template is="apifmLogin" data="{{wxAuth: wxAuth}}" />