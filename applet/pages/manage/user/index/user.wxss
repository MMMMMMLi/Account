/* 主要内容样式 */
.container {
  width: 100%;
  height: 100%;
  background-color: var(--weui-BG-0);
  display: flex;
  flex-direction: column;
}

/* 筛选选择器 */
.search-tab {
  background-color: #ffffff;
}

/* 中间滚动 */
.scroll {
  flex: 1;
  overflow: scroll;
}

.center {
  height: 100%;
}

.button-sp-area {
  text-align: center;
}

.weui-btn_mini {
  display: inline-block;
  margin-right: 5px;
  width: auto;
  padding: 0 .75em;
  line-height: 2;
  font-size: 16px;

}