/* 主要内容样式 */
.container {
  width: 100%;
  height: auto;
  background-color: #F2f2f2;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  background-color: #ffffff;
  margin-bottom: 10px;
}

.tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 15px;
  color: #777;
}

.on {
  font-size: 40rpx;
  font-weight:bold;
  color: #e64340;
  border-bottom: 6rpx solid #e64340;
}

.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 88rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #F2f2f2;
}

.no-order-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999999;
  text-align: center
}

.weui-form-preview__hd_count {
  position: relative;
  padding: 16px;
  text-align: right;
}

.weui-form-preview__hd_count:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid var(--weui-FG-3);
  color: var(--weui-FG-3);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  left: 16px
}

.weui-form-preview__label_unpaid {
  float: left;
  margin-right: 1em;
  color: red;
  font-weight: bolder;
  text-align: justify;
  text-align-last: justify
}

.weui-form-preview__label_paid {
  float: left;
  margin-right: 1em;
  color: green;
  font-weight: bolder;
  text-align: justify;
  text-align-last: justify
}

.weui-form-preview__btn {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: var(--weui-LINK);
  text-align: center;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
}

button.weui-form-preview__btn {
  background-color: transparent;
  border: 0;
  outline: 0;
  line-height: inherit;
  font-size: inherit
}

.weui-form-preview__btn:active {
  background-color: var(--weui-BG-COLOR-ACTIVE)
}

.weui-form-preview__btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid var(--weui-DIALOG-LINE-COLOR);
  color: var(--weui-DIALOG-LINE-COLOR);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(.5);
  transform: scaleX(.5)
}

.weui-form-preview__btn:first-child:after {
  display: none
}

.weui-form-preview__btn_default {
  color: var(--weui-FG-HALF)
}

.weui-form-preview__btn_primary {
  color: var(--weui-LINK)
}

.weui-form-preview__btn_primary {
  font-weight: bolder;
  color: var(--weui-LINK)
}