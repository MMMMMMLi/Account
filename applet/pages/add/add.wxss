.searchbar-result {
  margin: 10rpx 5rpx 0 5rpx;
  font-size: 14px;
  position: absolute;
  z-index: 100;
  width: 98%;
}

.searchbar-result .weui-cell__bd {
  padding: 2px 0 2px 20px;
  color: var(--weui-FG-1)
}

.searchbar-result:before {
  display: none
}

/* 底部按钮的样式 */
.topButton {
  margin-top: 30rpx;
  position: fixed;
  bottom: 0;
}

.topButton:not([size='mini']) {
  width: 100%;
}

/* picker选择框样式 */
.pickerView {
  flex: 0.5;
  padding: 0;
  display: flex;
  padding-left: 16px;
  position: relative;
  align-items: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
}