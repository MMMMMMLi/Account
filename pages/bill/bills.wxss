/* pages/bill/bills.wxss */
@import "/template/login/index.wxss";

page {
  background-color: #FFFFFF;
  height: 100%;
}

.weui-tabs-bar__wrp {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
  text-align: center;
}

.weui-tabs-swiper {
  width: 100%;
  height: 100%;
}

.tab-content {
  height: 100%px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding-top: 40rpx;
  padding-bottom: 10rpx;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

/*分割线样式*/
.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.tab-time {
  padding-right: 45%;
}

.orderListDetails {
  display: flex;
  height: 20%;
  border-bottom: 1rpx solid #f3f3f3;
  align-items: center;
}

.orderListDetails .productImg {
  border-width: medium;
  border-style: double;
  border-color: rgb(250, 0, 255);
  flex: 0.5;
  height: 100%;
  text-align: center;
  margin-top: 20rpx;
  margin-left: 20rpx;
  writing-mode: vertical-lr;
  padding-left: 4%;
}


.orderListDetails .productInfo {
  border-width: medium;
  border-style: double;
  border-color: rgb(250, 0, 255);
  flex: 4.5;
  margin: 40rpx 10px 20px 30rpx;
  font-size: 15px;

}

.orderListDetails .productInfo {
  font-size: 15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10px;
  flex-direction: column
}

.order-test {
  margin-left: 30rpx;
}

.block-view {
  /* background-color: #FFEFD5; */
  width: 100%;
  height: 200px;
  border-radius: 20px;
  margin-top: 10px;
}